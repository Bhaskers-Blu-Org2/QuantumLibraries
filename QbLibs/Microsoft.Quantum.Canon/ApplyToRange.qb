operation () ApplyToRangeAC(((Int, Qubit) => () : Adjoint, Controlled) singleQubitOperation, Qubit[] register) {
    Body {
        for (idxQubit in 0..Length(register) - 1) {
            singleQubitOperation(idxQubit, register[idxQubit])
        }
    }

    Adjoint auto
    Controlled auto
